{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm cross-env BROWSER=none pnpm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Daspberry",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["$AUDIO/*", "**"],
        "readFile": true,
        "readDir": true,
        "exists": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["$AUDIO/*", "$AUDIO/**/*"]
      },
      "path": {
        "all": true
      },
      "http": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "Daspberry",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "sidebarImage": "icons/sidebar.bmp",
          "compression": "lzma"
        },
        "wix": {}
      }
    },
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": ["http://localhost"]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Daspberry",
        "transparent": true,
        "decorations": false,
        "fullscreen": false,
        "height": 1000,
        "resizable": false,
        "width": 1400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "theme": "Dark"
      }
    ]
  }
}
